package models.database

import scala.slick.driver.MySQLDriver.simple._

case class Manager(id: Option[Long], name: String, dept_id: Long, manager_id: Long, isManager: Boolean)

class Managers(tag: Tag) extends Table[Manager](tag, "MANAGER") {
  
  def id = column[Long]("id", O.PrimaryKey, O.AutoInc)
  def emp_id = column[String]("emp_id")
  def dept_id = column[Long]("dept_id")
  def reportee_id = column[Long]("reportee_id")
  def * = (id.?, emp_id, dept_id, reportee_id) <> (Employee.tupled, Employee.unapply _)
} 
